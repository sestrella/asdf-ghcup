#!/usr/bin/env bash

set -euo pipefail

# shellcheck source=../lib/utils.sh
source "$(dirname "$0")/../lib/utils.sh"

ver() {
  echo "${1}" | awk -F . '{ printf("%02d%02d", $1,$2); }'
}

main() {
  local version="${ASDF_INSTALL_VERSION}"
  local path="${ASDF_INSTALL_PATH}"
  check_ghcup
  if [[ "${1}" == "ghc" ]] || { [[ "${1}" == "hls"  ]] && [[ $(ver "$version") -ge $(ver "1.7") ]]; }
  then
    "$(ghcup_bin_dir)/ghcup" install "${1}" "${version}" -i "${path}"
  else
    "$(ghcup_bin_dir)/ghcup" install "${1}" "${version}" -i "${path}/bin"
  fi
}

if [[ "${BASH_SOURCE[0]}" == "${0}" ]]
then
  current_script_path=${BASH_SOURCE[0]}
  plugin_dir=$(dirname "$(dirname "$current_script_path")")
  toolname=$(basename "$plugin_dir")

  main "${1:-$toolname}"
fi
